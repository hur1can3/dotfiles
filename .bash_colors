set_prompt_style () {
  local USER_COLOR="\[\033[1;34m\]"   #Light Blue
  local DIR_COLOR="\[\033[1:36m\]"     #Light Grey
  local RESET_COLOR="\[\033[1;37m\]" #White
  local SYMBOL="$"

  if [ `whoami` == "root" ] ; then
    USER_COLOR="\[\033[0;31m\]"       #Light Red
    DIR_COLOR=$USER_COLOR
    SYMBOL="#"
  fi

  PS1="┌─[\[\e[36m\]\h\[\e[0m\]][\[\e[1;32m\]\w\[\e[0m\]]\n└─╼ "

}
